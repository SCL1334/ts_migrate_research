{
  "compilerOptions": {
    "allowJs": true,     // 允許 TypeScript 處理 JavaScript 檔案
    // "checkJs": true,     // 啟用對 JavaScript 檔案的型別檢查
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es2021"
  },
  "include": [
    "**/*.js",
    "**/*.ts"      
  ],
  "exclude": [
    "node_modules",
    "**/dist"
  ]
}